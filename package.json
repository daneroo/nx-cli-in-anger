{
  "name": "pnpm-cli-in-anger",
  "version": "1.0.0",
  "description": "Monorepo template for typescript project with pnpm",
  "type": "module",
  "private": true,
  "keywords": [
    "monorepo",
    "typescript",
    "eslint",
    "prettier",
    "vitest",
    "pnpm"
  ],
  "license": "MIT",
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "lint": "pnpm nx run-many --target=lint",
    "test": "pnpm nx run-many --target=test",
    "coverage-with-nx": "pnpm nx run-many --target=coverage",
    "coverage": "vitest run --coverage",
    "build": "pnpm run -r build",
    "start": "node apps/command/dist/main.js -f apps/command/robert-frost-the-road-not-taken.mp3",
    "format:write": "prettier --write \"packages/**/*.ts\" \"apps/**/*.ts\""
  },
  "devDependencies": {
    "@eslint/create-config": "^0.3.1",
    "@types/node": "^18.8.2",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "@vitest/coverage-c8": "^0.23.4",
    "chalk": "^5.1.0",
    "chokidar": "^3.5.3",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "latest",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-promise": "^6.0.1",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "vitest": "^0.23.4",
    "nx": "14.8.3"
  }
}